.topic[data-alignment="left"] {
  align-self: flex-start;
  margin-right: auto;
}

.topic[data-alignment="right"] {
  align-self: flex-end;
  margin-left: auto;
}

/* Connector Dots */
.topic::before {
  content: '';
  position: absolute;
  top: 24px;
  width: 16px;
  height: 16px;
  background: #fff;
  border: 4px solid #e5e7eb;
  border-radius: 50%;
  z-index: 2;
  transition: all 0.3s ease;
  box-shadow: 0 0 0 4px white;
}

.topic[data-alignment="left"]::before {
  right: -11.2%; /* Approx distance to center */
  transform: translateX(50%);
}

.topic[data-alignment="right"]::before {
  left: -11.2%;
  transform: translateX(-50%);
}

/* Connector Lines */
.topic::after {
  content: '';
  position: absolute;
  top: 30px;
  height: 4px;
  background: #e5e7eb;
  transition: all 0.3s ease;
  z-index: 0;
}

.topic[data-alignment="left"]::after {
  right: -11.2%;
  width: 11.2%;
}

.topic[data-alignment="right"]::after {
  left: -11.2%;
  width: 11.2%;
}

.topic:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  border-color: #667eea;
}


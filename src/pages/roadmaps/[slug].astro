---
import { getCollection } from 'astro:content';
import RoadmapLayout from '@/layouts/RoadmapLayout.astro';
import type { CollectionEntry } from 'astro:content';
import { RoadmapDrawer } from '@/components/RoadmapDrawer';

export async function getStaticPaths() {
  const roadmaps = await getCollection('roadmaps');
  return roadmaps.map((roadmap) => ({
    params: { slug: roadmap.id },
    props: { roadmap },
  }));
}

interface Props {
	roadmap: CollectionEntry<'roadmaps'>;
}

const { roadmap } = Astro.props;

const totalTopics = roadmap.data.nodes?.reduce((acc, section) => acc + (section.topics?.length ?? 0), 0) ?? 0;
const totalCategories = roadmap.data.nodes?.length ?? 0;
---

<RoadmapLayout title={roadmap.data.title} description={roadmap.data.description}>

<div class="sticky-header">
  <div class="sticky-content">
    <div class="sticky-stats">
      <div class="stat-item">
        <span class="stat-label">Topics</span>
        <span class="stat-value" id="totalTopicsDisplay">{totalTopics}</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Categories</span>
        <span class="stat-value">{totalCategories}</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Completed</span>
        <span class="stat-value">
          <span id="completedTopics">0</span>
          <span id="progressPercentage" class="percentage-text">(0%)</span>
        </span>
      </div>
    </div>
    <button id="clearProgressBtn" class="sticky-reset-btn" title="Reset Progress">
      Reset
    </button>
  </div>
  <div class="sticky-progress-track">
    <div class="sticky-progress-fill" id="progressFill" style="width: 0%;"></div>
  </div>
</div>

<div class="container">
  <div class="header">
    <h1>{roadmap.data.title}</h1>
    <p>{roadmap.data.description}</p>
  </div>

  <div class="roadmap">
    <div class="legend">
      <div class="legend-item">
        <div class="legend-box beginner"></div>
        <span>Beginner</span>
      </div>
      <div class="legend-item">
        <div class="legend-box intermediate"></div>
        <span>Intermediate</span>
      </div>
      <div class="legend-item">
        <div class="legend-box advanced"></div>
        <span>Advanced</span>
      </div>
    </div>

    <div class="filter-section">
      <button class="filter-btn active" data-filter="all">All Topics</button>
      <button class="filter-btn" data-filter="beginner">Beginner</button>
      <button class="filter-btn" data-filter="intermediate">Intermediate</button>
      <button class="filter-btn" data-filter="advanced">Advanced</button>
    </div>

    <div class="instructions">
      <p><strong>Tip:</strong> Left-click a tile or use "Details" to view more info. Right-click or use "Mark Complete" to track progress.</p>
    </div>

    {roadmap.data.nodes?.map(section => (
      <div class="section">
        <h2 class="section-title">{section.title}</h2>
        <div class="topics">
          {section.topics?.map(topic => (
            <div class={`topic ${topic.optional ? 'optional' : ''}`} data-difficulty={topic.difficulty} data-topic={JSON.stringify(topic)}>
              <div class={`difficulty ${topic.difficulty}`}></div>
              <div class="topic-name">
                {topic.name}
                {topic.optional && <span class="optional-badge">Optional</span>}
              </div>
              <div class="topic-desc">{topic.description}</div>
              <div class="topic-actions">
                <button class="action-btn details-btn">Details</button>
                <button class="action-btn complete-btn">Mark Complete</button>
                {topic.optional && <button class="action-btn skip-btn" title="Skip this optional topic">Skip</button>}
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}


  </div>
</div>
<RoadmapDrawer client:load />
</RoadmapLayout>


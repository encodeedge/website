<script define:vars={{ slug: roadmap.id }}>
  console.log("Roadmap script initialized for:", slug);

  let completedTopicsSet = new Set(
    JSON.parse(localStorage.getItem(`completedTopics_${slug}`) || "[]")
  );
  let skippedTopicsSet = new Set(
    JSON.parse(localStorage.getItem(`skippedTopics_${slug}`) || "[]")
  );

  const stickyHeader = document.querySelector('.sticky-header');
  if (stickyHeader) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 100) {
        stickyHeader.classList.add('scrolled');
      } else {
        stickyHeader.classList.remove('scrolled');
      }
    });
  }

  const topics = document.querySelectorAll(".topic");
  const totalTopics = topics.length;

  // Function to update layout alignment (Left/Right) based on visibility
  function updateLayout() {
    const visibleTopics = Array.from(topics).filter(t => t.style.display !== 'none');
    visibleTopics.forEach((topic, index) => {
      topic.setAttribute('data-alignment', index % 2 === 0 ? 'left' : 'right');
      topic.style.animationDelay = `${index * 0.1}s`; // Stagger animation
    });
  }

  if (document.getElementById("totalTopicsDisplay")) {
    document.getElementById("totalTopicsDisplay").textContent = totalTopics;
  }

  const clearBtn = document.getElementById('clearProgressBtn');
  if (clearBtn) {
    clearBtn.addEventListener('click', () => {
      if(confirm('Are you sure you want to clear all progress for this roadmap?')) {
        completedTopicsSet.clear();
        skippedTopicsSet.clear();
        localStorage.removeItem(`completedTopics_${slug}`);
        localStorage.removeItem(`skippedTopics_${slug}`);
        topics.forEach(t => {
          t.classList.remove('clicked');
          t.classList.remove('skipped');
          const btn = t.querySelector('.complete-btn');
          if(btn) btn.textContent = "Mark Complete";
          const sBtn = t.querySelector('.skip-btn');
          if(sBtn) sBtn.textContent = "Skip";
        });
        updateProgress();
      }
    });
  }

  completedTopicsSet.forEach((index) => {
    if (topics[index]) {
      topics[index].classList.add("clicked");
      const btn = topics[index].querySelector('.complete-btn');
      if (btn) {
        btn.textContent = "Completed";
      }
    }
  });

  skippedTopicsSet.forEach((index) => {
    if (topics[index]) {
      topics[index].classList.add("skipped");
      const btn = topics[index].querySelector('.skip-btn');
      if (btn) {
        btn.textContent = "Skipped";
      }
    }
  });

  function updateProgress() {
    const completed = completedTopicsSet.size + skippedTopicsSet.size;
    const percentage = totalTopics > 0 ? Math.round((completed / totalTopics) * 100) : 0;

    if (document.getElementById("completedTopics")) {
      document.getElementById("completedTopics").textContent = completed;
    }
    if (document.getElementById("progressFill")) {
      document.getElementById("progressFill").style.height = percentage + "%";
    }
    if (document.getElementById("progressPercentage")) {
      document.getElementById("progressPercentage").textContent = `(${percentage}%)`;
    }
    

    localStorage.setItem(
      `completedTopics_${slug}`,
      JSON.stringify([...completedTopicsSet])
    );
    localStorage.setItem(
      `skippedTopics_${slug}`,
      JSON.stringify([...skippedTopicsSet])
    );
  }

  updateProgress();
  updateLayout(); // Initial layout calculation

  topics.forEach((topic, index) => {
    const detailsBtn = topic.querySelector('.details-btn');
    const completeBtn = topic.querySelector('.complete-btn');
    const skipBtn = topic.querySelector('.skip-btn');

    const toggleComplete = () => {
      if (topic.classList.contains('skipped')) {
        topic.classList.remove('skipped');
        skippedTopicsSet.delete(index);
        if (skipBtn) skipBtn.textContent = "Skip";
      }

      topic.classList.toggle("clicked");

      if (topic.classList.contains("clicked")) {
        completedTopicsSet.add(index);
        if (completeBtn) completeBtn.textContent = "Completed";
      } else {
        completedTopicsSet.delete(index);
        if (completeBtn) completeBtn.textContent = "Mark Complete";
      }

      updateProgress();
    };

    const toggleSkip = () => {
      if (topic.classList.contains('clicked')) {
        topic.classList.remove('clicked');
        completedTopicsSet.delete(index);
        if (completeBtn) completeBtn.textContent = "Mark Complete";
      }

      topic.classList.toggle("skipped");

      if (topic.classList.contains("skipped")) {
        skippedTopicsSet.add(index);
        if (skipBtn) skipBtn.textContent = "Skipped";
      } else {
        skippedTopicsSet.delete(index);
        if (skipBtn) skipBtn.textContent = "Skip";
      }
      updateProgress();
    };

    // Left Click: Open Details Drawer
    topic.addEventListener("click", function (event) {
      if (event.target.tagName === 'A' || event.target.closest('.action-btn')) {
        return;
      }
      
      let topicData;
      try {
        topicData = JSON.parse(topic.dataset.topic);
      } catch (e) {
        console.error("Error parsing topic data:", e);
        return;
      }

      window.dispatchEvent(new CustomEvent('roadmap:open-drawer', { detail: topicData }));
    });

    // Right Click: Toggle Completion Status
    topic.addEventListener("contextmenu", function (event) {
      event.preventDefault();
      toggleComplete();
    });

    if (detailsBtn) {
      detailsBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const topicData = JSON.parse(topic.dataset.topic);
        window.dispatchEvent(new CustomEvent('roadmap:open-drawer', { detail: topicData }));
      });
    }

    if (completeBtn) {
      completeBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleComplete();
      });
    }

    if (skipBtn) {
      skipBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleSkip();
      });
    }
  });

  const filterButtons = document.querySelectorAll(".filter-btn");

  filterButtons.forEach((button) => {
    button.addEventListener("click", function () {
      filterButtons.forEach((btn) => btn.classList.remove("active"));
      this.classList.add("active");

      const filter = this.getAttribute("data-filter");

      topics.forEach((topic) => {
        if (filter === "all") {
          topic.style.display = "block";
        } else {
          const difficulty = topic.getAttribute("data-difficulty");
          topic.style.display = difficulty === filter ? "block" : "none";
        }
      });
      updateLayout(); // Recalculate tree structure after filtering
    });
  });
</script>